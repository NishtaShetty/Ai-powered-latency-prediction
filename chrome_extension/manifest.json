{
  "manifest_version": 3,
  "name": "Network Latency Monitor",
  "version": "1.0",
  "description": "Monitors network latency for visited websites",
  "permissions": [
    "tabs",
    "webNavigation",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:5000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
} 